{
    "name": "denizgolbas/laravel-equality-validation",
    "description": "A powerful Laravel validation rule for checking equality between reference and target model columns. Perfect for validating relationships, matching codes, currencies, and ensuring data consistency across related models.",
    "keywords": ["laravel", "validation", "rule", "equality", "model", "eloquent", "relationship", "validation-rule"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/denizgolbas/laravel-equality-validation",
    "support": {
        "issues": "https://github.com/denizgolbas/laravel-equality-validation/issues",
        "source": "https://github.com/denizgolbas/laravel-equality-validation"
    },
    "authors": [
        {
            "name": "Deniz Golbas",
            "email": "info@denizgolbas.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0|^10.0|^11.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/validation": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.5|^10.0"
    },
    "autoload": {
        "psr-4": {
            "DenizGolbas\\LaravelEqualityValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DenizGolbas\\LaravelEqualityValidation\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DenizGolbas\\LaravelEqualityValidation\\EqualityValidationServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}

